{
  "manifest_version": 3,
  "name": "Refresher",
  "description": "Refresh an active tab after your desired duration.",
  "version": "1.0",
  "permissions": [
    "scripting"
  ],
  "host_permissions":[
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "dir/index.html",
    "default_icon": {
        "16": "images/hourglass.png",
        "48": "images/hourglass.png",
        "128": "images/hourglass.png"
    }
  },
  "background": {
      "service_worker": "/src/service-worker.js",
      "type":"module"
    }
}